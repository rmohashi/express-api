{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
      "@web/*": ["web/*"],
      "@infra/*": ["infra/*"],
      "@use-cases/*": ["use-cases/*"],
      "@domain/*": ["domain/*"],
      "@utils/*": ["utils/*"]
    },
    "rootDirs": ["src"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
